<table>
  <thead>
    <tr>
      <th>Label</th>
      <th>Description</th>
      <th>Domain</th>
      <th>Example</th>
      <th>Started date</th>
      <th>Posting date</th>
      <th>Virality</th>
      <th>Ideas</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @trends.each do |trend| %>
      <tr>
        <td><%= trend.label %></td>
        <td><%= trend.description %></td>
        <td><%= trend.domain %></td>

        <td><%= trend.started_date %></td>
        <td><%= trend.posting_date %></td>
        <td><%= trend.virality %></td>
        <td><%= trend.ideas %></td>
        <td><%= link_to 'Show', trend %></td>
        <td><%= link_to 'Destroy', trend, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
